{
	"name": "@second-brain/api",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "wrangler dev",
		"deploy": "wrangler deploy",
		"build": "tsc",
		"lint": "biome lint .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
