{
	"name": "@second-brain/api",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "wrangler dev",
		"deploy": "wrangler deploy",
		"build": "tsc",
		"lint": "biome lint .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"migrate:local": "wrangler d1 migrations apply second-brain-db --local",
		"migrate:prod": "wrangler d1 migrations apply second-brain-db --remote",
		"migrate:list": "wrangler d1 migrations list second-brain-db",
		"drizzle:generate": "drizzle-kit generate && cd ../.. && ./scripts/analyze-migration-safety.sh",
		"drizzle:migrate": "drizzle-kit migrate",
		"drizzle:studio": "drizzle-kit studio",
		"drizzle:analyze": "cd ../.. && ./scripts/analyze-migration-safety.sh"
	},
	"dependencies": {
		"@hono/zod-validator": "^0.7.4",
		"@second-brain/database": "workspace:*",
		"@second-brain/types": "workspace:*",
		"drizzle-orm": "^0.44.7",
		"hono": "^4.10.4",
		"nanoid": "^5.1.6",
		"zod": "^3.25.76"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20251109.0",
		"drizzle-kit": "^0.31.6",
		"typescript": "^5.9.3",
		"wrangler": "^4.46.0"
	}
}
