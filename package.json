{
  "name": "second-brain-app",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:api": "bun --filter @second-brain/api dev",
    "dev:web": "bun --filter @second-brain/web dev",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "biome check --write .",
    "check:ci": "biome check .",
    "deploy": "bun run build && bun --filter @second-brain/api deploy"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.4",
    "@cloudflare/workers-types": "^4.20241205.0",
    "@types/node": "^20.0.0",
    "turbo": "^2.5.4",
    "typescript": "^5.0.0",
    "wrangler": "^3.0.0",
    "@types/bun": "latest"
  },
  "packageManager": "bun@1.1.42",
  "module": "index.ts",
  "type": "module"
}
