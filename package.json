{
  "name": "second-brain-app",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:api": "pnpm --filter @second-brain/api dev",
    "dev:web": "pnpm --filter @second-brain/web dev",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "deploy": "pnpm run build && pnpm --filter @second-brain/api deploy"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241205.0",
    "@types/node": "^20.0.0",
    "turbo": "^2.5.4",
    "typescript": "^5.0.0",
    "wrangler": "^3.0.0"
  },
  "packageManager": "pnpm@10.12.4"
}
